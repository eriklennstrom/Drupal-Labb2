<div class="container mg-top">
    <div class="columns">
        <div class="column">
            <div{{ attributes }}>
                {{ title_prefix }}
                {% if label %}
                    <h2{{ title_attributes }}>{{ label }}</h2>
                {% endif %}
                {{ title_suffix }}
                {% block content %}
                {{ content }}
                {% endblock %}
            </div>
        </div>
    </div>
</div>
  
